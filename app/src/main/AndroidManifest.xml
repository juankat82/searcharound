<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.main.whatsaround.logginandsignup">
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.fingerprint" android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".BoneActivity" android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" android:noHistory="true"/>

                <category android:name="android.intent.category.LAUNCHER" android:noHistory="true"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name="com.main.whatsaround.loggedinuser.UserScreenActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
        <activity android:name="com.main.whatsaround.loggedinuser.AboutActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
        <activity android:name="com.main.whatsaround.loggedinuser.MyAccountActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
        <activity android:name="com.main.whatsaround.loggedinuser.SettingsActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
        <activity android:name="com.main.whatsaround.loggedinuser.LogoutActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
    </application>

</manifest>