<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    package="com.main.searcharound">
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

    <application

        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"

        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data android:name="com.google.android.geo.API_KEY" android:value="USE YOUR OWN KEY"/>
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity android:name=".UserScreenActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:noHistory="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <activity android:name="com.main.searcharound.AboutActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
        <activity android:name="com.main.searcharound.SettingsActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
        <activity android:name="com.main.searcharound.LogoutActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
        <activity android:name="com.main.searcharound.WeatherActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
        <activity android:name="com.main.searcharound.NarrowSearchActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:windowSoftInputMode="adjustNothing" android:noHistory="false"/>
    </application>

</manifest>
